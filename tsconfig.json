{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "module": "nodenext", // Update module to Node16
    "typeRoots": ["./node_modules/@types", "./node_modules/mongoose"],
    "types": ["node"],
    "esModuleInterop": true,
    "target": "ES2020", // Use a more modern target for better support
    "moduleResolution": "Node16", // Keep Node16 for resolution
    "sourceMap": true,
    "outDir": "dist"
  },
  "lib": ["es2020"] // Align with ES2020 for target compatibility
}

